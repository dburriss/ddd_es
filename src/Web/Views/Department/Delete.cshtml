@model DepartmentViewModel
<div class="col-lg-9">
    <h3>@Model.Name</h3>
    <blockquote>@Model.Id</blockquote>

    <table class="table table-hover">
        <caption>Committees</caption>
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Committees)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm"><span class="glyphicon glyphicon-eye-open"></span></a>
                        <a asp-action="Update" asp-route-id="@c.Id" class="btn btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="well well-lg">
        <form asp-action="Delete">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left"></span> CANCEL
            </a>

            <input asp-for="Id" type="hidden" />
            <button class="btn btn-danger" type="submit">
                <span class="glyphicon glyphicon-trash"></span> CONFIRM DELETE
            </button>
        </form>
    </div>
</div>

<div class="clearfix"></div>