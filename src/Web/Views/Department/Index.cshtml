@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Departments";
}
<div class="col-lg-8">
    <table class="table table-hover">
        <caption>Departments</caption>
        <thead>
            <tr>
                <th>Name</th>
                <th>Committees</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Name</td>
                    <td>@dept.Committees.Count()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-sm"><span class="glyphicon glyphicon-eye-open"></span></a>
                        <a asp-action="Update" asp-route-id="@dept.Id" class="btn btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-lg-4">
    <div class="panel panel-default">
        <div class="panel-heading">Department Actions</div>
        <div class="panel-body">
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus-sign"></span> NEW DEPARTMENT
                </a>
            </div>
        </div>
    </div>
</div>


