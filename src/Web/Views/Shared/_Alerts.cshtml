@if (TempData.GetAlerts().Any())
{
    var alertsEnumerator = TempData.GetAlerts().Reverse<Alert>().GetEnumerator();

    <script type="text/javascript">
        $(function () {
        @while(alertsEnumerator.MoveNext())
        {
            var alert = alertsEnumerator.Current;
            <text>
                window.alerts.showAlert({
                message: '@alert.Message.Replace("'", "\\'")',
					alertClass: '@alert.AlertClass'

                });
            </text>
        }
        });
    </script>
    TempData.Save();
}
